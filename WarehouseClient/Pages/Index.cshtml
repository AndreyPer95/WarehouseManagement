@page
@model WarehouseClient.Pages.IndexModel
@{
    ViewData["Title"] = "Баланс склада";
}

<div class="content-wrapper">
    <div class="page-header">
        <h1>Баланс</h1>
    </div>

    <form method="get" class="filters">
        <div class="filter-group">
            <label for="resourceFilter">Ресурсы</label>
            <select id="resourceFilter" name="resourceIds" multiple asp-items="Model.ResourcesList">
                <option value="">-- Все ресурсы --</option>
            </select>
        </div>
        
        <div class="filter-group">
            <label for="unitFilter">Единицы измерения</label>
            <select id="unitFilter" name="unitIds" multiple asp-items="Model.UnitsList">
                <option value="">-- Все единицы --</option>
            </select>
        </div>
        
        <button type="submit" class="btn btn-primary">Применить</button>
        <a href="/" class="btn btn-secondary">Сбросить</a>
    </form>

    <table class="data-table">
        <thead>
            <tr>
                <th>Ресурс</th>
                <th>Единица измерения</th>
                <th>Количество</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Balances)
            {
                <tr>
                    <td>@item.ResourceName</td>
                    <td>@item.UnitName</td>
                    <td>@item.Quantity.ToString("N2")</td>
                </tr>
            }
        </tbody>
    </table>
</div>