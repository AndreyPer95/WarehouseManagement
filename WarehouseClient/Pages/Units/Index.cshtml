@page
@model WarehouseClient.Pages.Units.IndexModel
@{
    ViewData["Title"] = "Единицы измерения";
}

<div class="content-wrapper">
    <div class="page-header">
        <h1>Единицы измерения</h1>
    </div>

    <div style="margin-bottom: 20px;">
        <a href="/Units/Create" class="btn btn-success">Добавить</a>
    </div>

    <table class="data-table">
        <thead>
            <tr>
                <th>Наименование</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Units)
            {
                <tr>
                    <td>@item.Name</td>
                    <td class="table-actions">
                        @if (item.Status == WarehouseClient.Models.EntityState.Active)
                        {
                            <form method="post" asp-page-handler="Archive" style="display: inline;">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-warning">К архиву</button>
                            </form>
                        }
                        else
                        {
                            <span class="status-badge status-archived">Архивирован</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>